generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Books Schema 
model Book {
  id          String   @id @default(uuid()) @map("_id")
  title       String
  description String?
  category    String?
  coverImage  String?
  bookPdf     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
}

// User Schema/Author Schema
model User {
  id        String   @id @default(uuid()) @map("_id")
  email     String   @unique
  name      String
  image     String?
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
